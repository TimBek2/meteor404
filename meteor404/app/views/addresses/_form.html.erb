<%= form_for :address, :url => :addresses, :html => {:id => 'address-form'} do |f| %>
    <%= f.label :Street %>
    <%= f.text_field :street %>

    <%= f.label :City %>
    <%= f.text_field :city %>

    <%= f.label :State %>
    <%= f.text_field :state %>

    <%= f.label :Country %>
    <%= f.text_field :country %>
    <br>
    <br>
    <%= f.submit 'Submit', class: "new-address-button" %>
<% end %>


