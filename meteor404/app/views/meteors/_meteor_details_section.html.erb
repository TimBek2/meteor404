<h1>Meteor Name: <%= @meteor.name %></h1>

<h3>approx mass: <%= @meteor.mass %> kg</h3>
<h3>year entered atmosphere: <%= @meteor.year %></h3>
<h3>approx lat/long: <%= @meteor.reclat %>  <%= @meteor.reclong %></h3>

<%= form_for :meteor, :html => {id: 'meteor-show-button'} do |f| %>
  <%= hidden_field_tag(:lat, @meteor.reclat, :input_html => {:id => "lat"}) %>
  <%= hidden_field_tag(:lng, @meteor.reclong, :input_html => {:id => "lng"}) %>
  <%= f.submit "Would you like directions to this Meteor?" %>
<% end %>


